<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    android:background="@color/appBackground">
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="400dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@raw/raseenee" />    

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:onClick="goToHome"
        android:text="@string/login"
        android:textColor="@color/textColor"
        android:textSize="17dp"
        android:textStyle="normal"
        android:typeface="serif" />

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorLink="@color/textColor" />

    <TextView
        android:id="@+id/inputUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputEmail"
        android:layout_alignLeft="@+id/inputPassword"
        android:layout_marginBottom="17dp"
        android:text="@string/email"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor"
        android:textColorLink="@color/textColor"
        android:textSize="20sp"
        android:textStyle="normal"
        android:typeface="serif" />

    <TextView
        android:id="@+id/inputmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputPassword"
        android:layout_alignLeft="@+id/inputPassword"
        android:layout_marginBottom="14dp"
        android:text="@string/password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:textStyle="normal"
        android:typeface="serif" />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputmail"
        android:layout_alignLeft="@+id/inputUsername"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColorLink="@color/textColor" >

        <requestFocus />
    </EditText>

</RelativeLayout>
